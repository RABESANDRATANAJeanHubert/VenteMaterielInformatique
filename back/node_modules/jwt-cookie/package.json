{
  "name": "jwt-cookie",
  "description": "Small library for reading and writing objects to http requests and responses.",
  "version": "1.0.1",
  "engines": {
    "node": "^14.5.0"
  },
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build-docs": "./build/docs.sh",
    "commit": "eslint . test && npm run test-ratchet && npm run build-docs",
    "jest": "node --experimental-vm-modules node_modules/.bin/jest",
    "prepublishOnly": "npm run tag && git push --tags",
    "start": "node index.js",
    "tag": "./build/tag.sh",
    "test": "eslint --fix . && npm run jest",
    "test-ratchet": "npm run jest && jest-coverage-ratchet && git add package.json"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.0",
    "jest": "^26.5.0",
    "jest-coverage-ratchet": "^0.2.3",
    "jsdoc-to-markdown": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run commit"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-undef": 0
    }
  },
  "dependencies": {
    "cookie": "^0.4.1",
    "jsonwebtoken": "^8.5.1"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/paulkiddle/jwt-cookie.git"
  },
  "keywords": [
    "jwt",
    "cookie",
    "request",
    "response",
    "set",
    "object",
    "session",
    "read",
    "write",
    "json",
    "web",
    "token",
    "jsonwebtoken",
    "jwtc"
  ],
  "author": "Paul Kiddle",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/paulkiddle/jwt-cookie/issues"
  },
  "homepage": "https://gitlab.com/paulkiddle/jwt-cookie#readme"
}
